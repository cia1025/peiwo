<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
    >

    <ImageView
        android:id="@+id/iv_bg_new_voice"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#a9000000"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="30dp"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/btn_start_wildcat"
            android:layout_marginRight="30dp"
            android:src="@drawable/img_wild_guide_step_one"
            android:layout_above="@+id/btn_start_wildcat"
            />

        <ImageView
            android:layout_centerHorizontal="true"
            android:id="@+id/btn_start_wildcat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/btn_match_constellation"
            android:layout_marginBottom="8dp"
            android:src="@drawable/ic_start_new_voice"/>

        <TextView
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:textColor="#00b8d0"
            android:textSize="12sp"
            android:text="星座匹配"
            android:gravity="top|center_horizontal"
            android:visibility="visible"
            android:id="@+id/btn_match_constellation"
            android:layout_width="120dp"
            android:layout_height="30dp"
            />
    </RelativeLayout>


</FrameLayout>