<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="#18181a"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:textColor="#ffffff"
        android:text="编辑自定义"
        android:singleLine="true"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="18dp"
        android:id="@+id/tv_input_title"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#2e2e2f"
        android:layout_marginTop="16dp"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:background="#202022"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:layout_marginTop="18dp"
        android:id="@+id/et_input_field"
        android:singleLine="true"
        android:textSize="14sp"
        android:textColor="#ffffff"
        android:gravity="center"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:paddingBottom="24dp"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        >

        <Button
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1.0"
            android:text="取消"
            android:textSize="16sp"
            android:textColor="#ffffff"
            android:background="#202022"
            android:id="@+id/v_input_cancel"
            />

        <Button
            android:layout_marginLeft="34dp"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1.0"
            android:text="保存"
            android:textSize="16sp"
            android:textColor="#ffffff"
            android:background="#153237"
            android:id="@+id/v_input_confirm"
            />

    </LinearLayout>

</LinearLayout>