<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@id/title_bar"
                    style="@style/fillx"
                    android:layout_height="@dimen/title_bar_height"
                    android:background="@color/c_ee"
        >

        <TextView
            android:id="@+id/btn_left"
            style="@style/filly"
            android:layout_width="@dimen/title_bar_btn_width"
            android:background="@drawable/bg_trans_black"
            android:drawableLeft="@drawable/arrow_left"
            android:text="返回"
            android:textColor="@color/c_title_other_color"
            android:gravity="left|center_vertical"
            android:paddingLeft="6dp"
            android:textSize="16dp"
            android:drawablePadding="4dp"
            android:visibility="visible"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:text="通话调试"
            android:singleLine="true"
            android:gravity="center"
            android:textColor="@color/c_title_txt_color"
            android:layout_centerInParent="true"
            android:textSize="@dimen/sp_title_txt_size"/>

        <Button
            android:id="@+id/btn_right"
            style="@style/choice_please_blue"
            android:layout_width="@dimen/title_bar_btn_width"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@drawable/bg_trans_black"
            android:text="@string/save"
            android:textSize="18dp"
            android:visibility="gone"/>

        <View
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:background="@color/c_de"/>

    </RelativeLayout>

    <me.peiwo.peiwo.widget.ViewPagerContScroll
        android:id="@+id/viewpager_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
</LinearLayout>