<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <include layout="@layout/title_bar"/>
        <TextView
            android:id="@+id/tv_pcode"
            android:clickable="true"
            android:onClick="click"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:textSize="12sp"
            android:textColor="#4d4d4d"
            android:gravity="center"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/c_de2"
            />
        <EditText
            android:textColor="#4d4d4d"
            android:id="@+id/et_num"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:hint="请输入手机号或陪我号"
            android:inputType="numberSigned"
            android:singleLine="true"
            android:textColorHint="@color/et_hint_color"
            android:background="@null"
            android:textSize="13sp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/c_de2"
            />
        <EditText
            android:id="@+id/et_pwd"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:hint="请输入陪我登录密码"
            android:inputType="textPassword"
            android:singleLine="true"
            android:background="@null"
            android:textColorHint="@color/et_hint_color"
            android:textColor="#4d4d4d"
            android:textSize="13sp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/c_de2"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp">
            <TextView
                android:visibility="gone"
                android:id="@+id/tv_overseas_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="15dp"
                android:clickable="true"
                android:onClick="click"
                android:text="海外手机号登录"
                android:textColor="@color/tx_login"
                android:textSize="@dimen/default_text_size"/>
        </RelativeLayout>
        <Button
            android:id="@+id/btn_submit"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:layout_marginLeft="23dp"
            android:layout_marginRight="23dp"
            android:layout_marginTop="28dp"
            android:background="#00b8d0"
            android:text="登录"
            android:textColor="@color/c_white"
            android:textSize="13sp"/>
        <TextView
            android:id="@+id/social_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="第三方注册 / 登录"
            android:layout_marginTop="28dp"
            android:textColor="#4d4d4d"
            android:textSize="12sp"/>
        <LinearLayout
            android:gravity="center_vertical"
            android:id="@+id/tv_qq_login"
            android:layout_width="124dp"
            android:layout_height="34dp"
            android:background="#5ac9d7"
            android:clickable="true"
            android:layout_marginTop="19dp"
            android:layout_gravity="center_horizontal"
            android:onClick="click"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_login_qq"
                android:layout_marginLeft="24dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="QQ"
                android:layout_marginLeft="17dp"
                android:textColor="@color/c_white"
                android:textSize="12sp"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center_vertical"
            android:id="@+id/tv_weichat_login"
            android:layout_width="124dp"
            android:layout_height="34dp"
            android:background="#5ac9d7"
            android:layout_gravity="center_horizontal"
            android:clickable="true"
            android:onClick="click"
            android:layout_marginTop="17dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_marginLeft="24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_login_weichat"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="微信"
                android:layout_marginLeft="17dp"
                android:textColor="@color/c_white"
                android:textSize="12sp"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center_vertical"
            android:layout_marginTop="17dp"
            android:id="@+id/tv_weibo_login"
            android:layout_gravity="center_horizontal"
            android:layout_width="124dp"
            android:layout_height="34dp"
            android:background="#5ac9d7"
            android:clickable="true"
            android:onClick="click"
            android:orientation="horizontal">
            <ImageView
                android:layout_marginLeft="24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_login_weibo"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="微博"
                android:layout_marginLeft="17dp"
                android:textColor="@color/c_white"
                android:textSize="12sp"/>
        </LinearLayout>
    </LinearLayout>
</merge>