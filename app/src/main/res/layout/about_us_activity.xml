<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#F8F8F8"
                tools:context=".AboutUsActivity">

    <include
        android:id="@+id/include1"
        layout="@layout/title_bar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/about_us_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher"/>

        <TextView
            android:id="@+id/ver_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="版本号：1.0"
            android:textSize="16sp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:layout_marginTop="25dp"
            android:background="@color/c_de2"/>

        <TextView
            android:id="@+id/tv_evaluation_app"
            style="@style/setting_bar"
            android:background="@drawable/bg_line_selector"
            android:drawableRight="@drawable/arrow_right"
            android:gravity="left|center_vertical"
            android:text="评价小陪"
            android:paddingRight="18dp"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/c_de2"/>

        <TextView
            android:id="@+id/tv_function_guide"
            style="@style/setting_bar"
            android:background="@drawable/bg_line_selector"
            android:drawableRight="@drawable/arrow_right"
            android:gravity="left|center_vertical"
            android:paddingRight="18dp"
            android:text="功能引导页"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/c_de2"/>

        <TextView
            android:id="@+id/tv_questions_answer"
            style="@style/setting_bar"
            android:background="@drawable/bg_line_selector"
            android:drawableRight="@drawable/arrow_right"
            android:gravity="left|center_vertical"
            android:text="常见问题与解答"
            android:paddingRight="18dp"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/c_de2"/>

        <TextView
            android:id="@+id/build_ver_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:textSize="16sp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/home_page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:autoLink="web"
        android:textColorLink="#00b8d0"
        android:text="陪我官网：https://h5.peiwoapi.com"/>

    <TextView
        android:id="@+id/tv_weibo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/home_page"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:drawableLeft="@drawable/ic_weibo_logo"
        android:drawablePadding="6dp"
        android:gravity="center_vertical"
        android:text="新浪微博：@陪我app"/>

    <TextView
        android:id="@+id/tv_protocol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/tv_weibo"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:text="陪我app《用户协议》"/>

</RelativeLayout>