<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" >

    <android.support.v4.view.ViewPager
        android:id="@+id/image_preview_pager"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/black" />

    <RelativeLayout
        android:id="@id/title_bar"
        style="@style/fillx"
        android:layout_height="@dimen/title_bar_height"
        android:background="#7F000000" >

        <TextView
            android:id="@+id/btn_left"
            style="@style/filly"
            android:layout_width="@dimen/title_bar_btn_width"
            android:background="@drawable/bg_trans_black"
            android:drawableLeft="@drawable/arrow_left"
            android:drawablePadding="4dp"
            android:gravity="left|center_vertical"
            android:paddingLeft="6dp"
            android:text="返回"
            android:textColor="@color/c_white"
            android:textSize="16sp"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/btn_right_select"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:src="@drawable/icon_selected_p" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="bottom"
        android:background="#7F000000" >

        <TextView
            android:id="@+id/btn_select_ok"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:paddingRight="15dp"
            android:text="确定"
            android:textColor="#0195FF"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/select_count_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/btn_select_ok"
            android:background="@drawable/green_badge"
            android:gravity="center"
            android:text="9"
            android:textColor="@color/white" />
    </RelativeLayout>

</merge>