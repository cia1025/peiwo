<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
    >

    <ImageView
        android:layout_alignParentLeft="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:id="@+id/iv_nav_avatar"
        android:src="@drawable/ic_drawer_avatar"
        android:scaleType="centerCrop"
        android:layout_marginLeft="16dp"
        />


    <View
        android:id="@+id/v_line_left"
        android:layout_width="0.3dp"
        android:layout_marginLeft="16dp"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/iv_nav_avatar"
        android:background="@color/c_de2_light"/>

    <TextView
        android:id="@+id/tv_nav_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/v_line_left"
        android:text="在线"
        android:layout_marginLeft="8dp"
        android:layout_centerVertical="true"
        android:textColor="#ffffff"
        android:textSize="13sp"
        />


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/tab_me_selector"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:id="@+id/iv_friends"
            />

        <View
            android:layout_width="wrap_content"
            android:layout_height="1.5dp"
            android:background="#000000"
            android:id="@+id/v_indicator_friends"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/iv_friends"
            android:layout_alignRight="@+id/iv_friends"
            />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/tab_msg_selector"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/iv_friends"
            android:layout_marginRight="25dp"
            android:id="@+id/iv_message"
            />

        <View
            android:layout_width="wrap_content"
            android:layout_height="1.5dp"
            android:background="#000000"
            android:id="@+id/v_indicator_message"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/iv_message"
            android:layout_alignRight="@+id/iv_message"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/tab_discover_selector"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/iv_message"
            android:layout_marginRight="25dp"
            android:id="@+id/iv_online"
            />

        <View
            android:layout_width="wrap_content"
            android:layout_height="1.5dp"
            android:background="#000000"
            android:id="@+id/v_indicator_online"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/iv_online"
            android:layout_alignRight="@+id/iv_online"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/tab_call_selector"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/iv_online"
            android:layout_marginRight="25dp"
            android:id="@+id/iv_wildcat"
            />

        <View
            android:layout_width="wrap_content"
            android:layout_height="1.5dp"
            android:background="#000000"
            android:id="@+id/v_indicator_wildcat"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/iv_wildcat"
            android:layout_alignRight="@+id/iv_wildcat"
            />

        <ImageView
            android:id="@+id/iv_message_bagde"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/green_dot_n"
            android:layout_alignRight="@+id/iv_message"
            android:layout_marginRight="-4dp"
            android:layout_marginTop="-4dp"
            android:layout_alignTop="@+id/iv_message"
            android:visibility="gone"
            />

    </RelativeLayout>

    <View
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:id="@+id/v_line_bottom"
        android:background="@color/c_de2_light"/>
</RelativeLayout>