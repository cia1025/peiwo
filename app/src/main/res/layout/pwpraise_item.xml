<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="80dp"
    >

    <ImageView
        android:id="@+id/iv_uface"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_default_avatar"
        android:layout_marginLeft="12dp"
        />

    <TextView
        android:layout_marginLeft="12dp"
        android:id="@+id/tv_uname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/iv_uface"
        android:ems="9"
        android:layout_alignTop="@+id/iv_uface"
        android:layout_marginTop="2dp"
        android:text="name"
        android:singleLine="true"
        android:textColor="#000000"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/tv_praise_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_uname"
        android:layout_marginTop="6dp"
        android:text="name"
        android:layout_alignLeft="@+id/tv_uname"
        android:textColor="#8e8e8e"
        android:textSize="12sp"/>


    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/tv_uname"
        android:background="@color/c_de"/>

</RelativeLayout>