<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <include layout="@layout/title_bar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <TextView
                android:paddingLeft="18dp"
                android:id="@+id/privacy_setting"
                style="@style/setting_bar"
                android:layout_height="45dp"
                android:layout_marginRight="18dp"
                android:background="@drawable/bg_line_trans_selector"
                android:drawableRight="@drawable/arrow_right"
                android:gravity="left|center_vertical"
                android:text="消息设置"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                android:background="@color/c_de2"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                android:layout_marginTop="19dp"
                android:background="@color/c_de2"/>

            <RelativeLayout
                android:id="@+id/rl_bind_phone"
                style="@style/setting_bar"
                android:layout_height="45dp"
                android:orientation="horizontal">

                <TextView

                    android:id="@+id/tv_bind_phonenumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:gravity="left|center_vertical"
                    android:text="手机号绑定"
                    android:textColor="#000000"
                    android:textSize="13sp"/>

                <TextView
                    android:id="@+id/tv_bind_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@+id/iv_arrow"
                    android:gravity="left|center_vertical"
                    android:textColor="#8e8e8e"
                    android:textSize="13sp"/>

                <ImageView
                    android:id="@+id/iv_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="18dp"
                    android:src="@drawable/arrow_right"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/c_de2"/>

            <TextView
                android:paddingLeft="18dp"
                android:id="@+id/tv_change_password"
                style="@style/setting_bar"
                android:layout_height="45dp"
                android:layout_marginRight="18dp"
                android:background="@drawable/bg_line_trans_selector"
                android:drawableRight="@drawable/arrow_right"
                android:gravity="left|center_vertical"
                android:text="修改登录密码"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                android:background="@color/c_de2"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                android:layout_marginTop="19dp"
                android:background="@color/c_de2"/>

            <LinearLayout
                android:id="@+id/my_info_container"
                style="@style/setting_bar"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="0dp"
                android:paddingRight="0dp">

                <TextView
                    android:layout_height="45dp"
                    android:id="@+id/judge_us"
                    style="@style/setting_bar"
                    android:background="@drawable/bg_line_trans_selector"
                    android:drawableRight="@drawable/arrow_right"
                    android:gravity="left|center_vertical"
                    android:text="探询小陪与评价"
                    android:layout_marginRight="18dp"
                    android:visibility="visible"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.3dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@color/c_de2"
                    android:visibility="visible"/>

                <RelativeLayout
                    android:id="@+id/rl_upgrade"
                    style="@style/setting_bar"
                    android:layout_height="45dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/upgrade"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/tv_find_nerver"
                        android:text="版本更新"
                        android:textColor="#000000"
                        android:textSize="13sp"/>

                    <TextView
                        android:id="@+id/tv_find_nerver"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="6dp"
                        android:layout_toLeftOf="@+id/iv_arrow_ver"
                        android:background="@drawable/bg_has_new"
                        android:text="发现新版本"
                        android:textColor="@color/c_white"
                        android:textSize="10sp"/>

                    <ImageView
                        android:layout_marginRight="18dp"
                        android:id="@+id/iv_arrow_ver"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/arrow_right"/>
                </RelativeLayout>


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                android:background="@color/c_de2"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                android:layout_marginTop="19dp"
                android:background="@color/c_de2"/>

            <TextView
                android:layout_height="45dp"
                android:id="@+id/black_list"
                style="@style/setting_bar"
                android:layout_marginRight="18dp"
                android:background="@drawable/bg_line_trans_selector"
                android:drawableRight="@drawable/arrow_right"
                android:gravity="left|center_vertical"
                android:text="黑名单"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                android:background="@color/c_de2"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                android:layout_marginTop="19dp"
                android:background="@color/c_de2"/>

            <TextView
                android:layout_marginRight="18dp"
                android:id="@+id/cache_clean"
                style="@style/setting_bar"
                android:layout_height="45dp"
                android:background="@drawable/bg_line_trans_selector"
                android:drawableRight="@drawable/arrow_right"
                android:gravity="left|center_vertical"
                android:text="清理图片缓存"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                android:background="@color/c_de2"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="17dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/setting_feedback"
                    android:layout_width="0dp"
                    android:layout_height="29dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
                    android:background="#626262"
                    android:text="意见反馈"
                    android:textSize="14sp"
                    android:textColor="@color/white"/>

                <Button
                    android:id="@+id/setting_logout"
                    android:layout_width="0dp"
                    android:layout_height="29dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="17dp"
                    android:layout_weight="1"
                    android:background="#00b8d0"
                    android:text="账号登出"
                    android:textSize="14sp"
                    android:textColor="@color/white"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>