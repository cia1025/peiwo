<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by PeiwoBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->


    <!-- Application theme. -->
    <style name="AppTheme" parent="PeiwoBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->

    </style>


    <style name="wrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="fillx">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="filly">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="window_view">
        <item name="@android:windowEnterAnimation">@anim/window_in</item>
        <item name="@android:windowExitAnimation">@anim/window_out</item>
    </style>

    <style name="fillall">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="setting_bar" parent="base_setting_bar">
        <item name="android:background">@drawable/bg_line_trans_selector</item>
    </style>

    <style name="gray_bar" parent="base_setting_bar">
        <item name="android:background">@drawable/bg_line_gray_selector</item>
    </style>

    <style name="base_setting_bar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:paddingLeft">18dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">#4d4d4d</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="ll_setting_bar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/bg_line_selector</item>
    </style>

    <style name="setting_bar_ic_text" parent="@style/gray_bar">
        <item name="android:drawablePadding">@dimen/text_drawable_padding</item>
        <item name="android:drawableRight">@drawable/arrow_right</item>
    </style>

    <style name="task_rl_line_bar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:background">@drawable/bg_task_line_selector</item>
    </style>

    <style name="task_ll_description">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingBottom">14dp</item>
        <item name="android:background">@color/bg_gray</item>
        <item name="android:visibility">gone</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="tast_text_description">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#aaaaaa</item>
        <item name="android:textSize">16sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="voice_choose_bar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ic_text">
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:drawablePadding">@dimen/text_drawable_padding</item>
        <item name="android:drawableRight">@drawable/arrow_right</item>
    </style>

    <style name="setting_bar_margin_top" parent="@style/setting_bar">
        <item name="android:layout_marginTop">16dp</item>
    </style>

    <style name="user_detail_setting_text_title">
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="choice_please_blue">
        <item name="android:textSize">15dp</item>
        <item name="android:paddingRight">3dp</item>
        <item name="android:paddingLeft">3dp</item>
        <item name="android:drawablePadding">3dp</item>
        <item name="android:textColor">@color/c_33</item>
    </style>

    <style name="dlg_trans" parent="@android:style/Theme.Dialog">
        <item name="android:windowIsFloating">true</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">false</item>
        <!-- 半透明 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 无标题 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 背景透明@android:color/transparent -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 模糊 -->
        <item name="android:windowFrame">@null</item>
        <!-- 边框 -->
    </style>


    <style name="choose_btn" parent="@style/wrap">
        <item name="android:drawablePadding">@dimen/text_drawable_padding</item>
        <item name="android:drawableRight">@drawable/arrow_right</item>
        <item name="android:textColor">@color/btn_bg_blue_color_normal</item>
    </style>

    <style name="tag_gray_item">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <!-- <item name="android:background">@drawable/bg_tag_gray</item> -->
        <item name="android:maxEms">8</item>
        <item name="android:ellipsize">middle</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ListViewStyle">
        <item name="android:cacheColorHint">@null</item>
        <item name="android:fadingEdge">none</item>
        <!-- <item name="android:listSelector">#00000000</item> -->
        <item name="android:divider">@null</item>
        <item name="android:dividerHeight">0dp</item>
        <item name="android:footerDividersEnabled">false</item>
        <item name="android:headerDividersEnabled">false</item>
    </style>

    <style name="base_dialog_theme" parent="Theme.AppCompat.Dialog" />

    <style name="AnimDialogLoading" parent="base_dialog_theme">
        <item name="android:windowFrame">@null</item>
        <!-- 边框 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 半透明 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 无标题 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 背景透明 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 模糊 -->
    </style>

    <style name="ShareAlert" parent="AnimDialogLoading">
        <item name="android:windowBackground">@drawable/bg_invit</item>
    </style>

    <!--<style name="WildShareAlert" parent="AnimDialogLoading">
        <item name="android:windowBackground">@drawable/bg_underlying</item>
    </style>-->

    <style name="CropButton">
        <item name="android:layout_margin">1dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_width">60dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/selector_crop_button</item>
    </style>

    <style name="call_theme" parent="AppThemeTranslucent">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
    </style>


    <style name="transparent_background_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <!--边框-->
        <item name="android:windowIsFloating">true</item>
        <!--是否浮现在activity之上-->
        <item name="android:windowNoTitle">true</item>
        <!--无标题-->
        <item name="android:windowBackground">@color/transparent</item>
        <!--背景透明-->
    </style>

